<%- include('../../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="col-md-6 offset-md-3">
        <div class="card card-body">
            <h4 class="mb-3">Log In to Your Account</h4>
            <form action="/auth/login" method="post">
                <div class="form-group my-2">
                    <label for="email">Enter Your Valid Email</label>
                    <input type="email" name="email" id="email"
                        class="form-control <%= error.email ? 'is-invalid' : '' %>">
                    <div class="invalid-feedback"> <%= error.email && error.email %> </div>
                </div>
                <div class="form-group my-2">
                    <label for="password">Enter Your Password</label>
                    <input type="password" name="password" id="password"
                        class="form-control <%= error.password ? 'is-invalid' : '' %>">
                    <div class="invalid-feedback"> <%= error.password && error.password %> </div>
                </div>
                <input type="submit" value="Login" class="btn btn-primary">
            </form>
            <a href="/auth/Signup" class=" my-3 text-center">Don't have any account? Signup Here</a>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>

</html>
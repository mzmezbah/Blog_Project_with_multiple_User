<%- include('../../partials/head.ejs') %>

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h4>
                        <%= title %>
                    </h4>
                    <div class="profile-pics">
                        <img src="<%= user.profilePics %>" alt="profile picture" class="img-thumbnail img-fluid"
                            id="profilePics" style="width: 400px; height: 350px;">
                    </div>
                    <form action="/uploads/profilePics" class="my-2" id="profilePicsForm">
                        <input type="file" name="profilePics" id="profilePicsFile" accept="image/*">

                        <input type="button" value="Remove pics" id="removeProfilePics"
                            style="display: <%= user.profilePics.includes('default.png') ? 'none' : 'block' %>"
                            class="btn btn-danger btn-sm my-2">
                    </form>
                </div>
                <div>
                    <form action="/dashboard/create-profile" method="post">
                        <div class="form-group">
                            <label for="name">Enter Your Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter Your Name">
                        </div>

                        <div class="form-group">
                            <label for="email">Enter Your Email</label>
                            <input type="email" name="email" id="email" class="form-control" value=" <%= user.email %>"
                                disabled>
                        </div>

                        <div class="form-group">
                            <label for="title">Enter A Short Title</label>
                            <input type="text" name="title" id="title" class="form-control"
                                placeholder="Enter A Short Title">
                        </div>

                        <div class="form-group">
                            <label for="bio">Enter A Short Bio</label>
                            <textarea name="bio" id="bio" class="form-control"></textarea>
                        </div>

                        <div>
                            <p class="lead">Your Social Links</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fab fa-internet-explorer"></i>
                                    </span>
                                    <input type="text" class="form-control" name="website" placeholder="Website Link">
                                </div>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fab fa-facebook-square"></i>
                                    </span>
                                    <input type="text" class="form-control" name="Facebook" placeholder="Facebook Link">
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fab fa-twitter-square"></i>
                                    </span>
                                    <input type="text" class="form-control" name="Twitter" placeholder="Twitter Link">
                                </div>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fab fa-github-square"></i>
                                    </span>
                                    <input type="text" class="form-control" name="Github" placeholder="Github Link">
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Upload Profile" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>

</html>
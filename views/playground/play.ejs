<%- include('../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="col-md-6 offset-md-3">
        <div class="card card-body">
            <h4 class="mb-3">Create A New Account</h4>
            <form action="/playground/play" method="post" enctype="multipart/form-data">
                <div class="form-group my-2">
                    <label for="username">Enter Your User Name (Must Be Uniq)</label>
                    <input type="text" name="username" id="username" class="form-control">
                </div>
                <div class="form-group my-2">
                    <label >Choose Your File</label>
                    <input type="file" name="my-file" class="form-control">
                </div>
                <div class="form-group my-2">
                    <label for="email">Enter Your Valid Email</label>
                    <input type="email" name="email" id="email" class="form-control"> 
                </div>
                <div class="form-group my-2">
                    <label for="password">Enter A Strong Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div class="form-group my-2">
                    <label for="confirmPassword">Confirm Your Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control">
                </div>
                <input type="submit" value="Signup" class="btn btn-primary">
            </form>
            <a href="/auth/login" class=" my-3 text-center">Already have an account? Login Here</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

</body>

</html>